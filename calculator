let choice=prompt("enter the operation you want to perform");
switch(choice)
  {
    case 1:
      {
        let a=prompt("enter the value of a");
        a=Number.parseInt(a);
        let b=prompt("enter the value of b");
        b=Number.parseInt(b);
        let c=a+b;
        c=Number.parseInt(c);
        console.log("the sum of a and b is ",c);
      break;
      }
